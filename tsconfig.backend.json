{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "scripts/**/*.ts",
    "lib/**/*.ts",
    "app/api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "app/**/page.tsx",
    "app/**/layout.tsx",
    "app/**/loading.tsx",
    "app/**/error.tsx",
    "app/**/not-found.tsx",
    "components/**/*.tsx"
  ]
} 